<component name="amazonSimpleDB-domain" type="synapse/template">
    <subComponents>
        <component name="createDomain">
            <file>createDomain.xml</file>
            <description>Create domains to contain data</description>
        </component>
        <component name="deleteDomain">
            <file>deleteDomain.xml</file>
            <description>Deletes specified domains</description>
        </component>
        <component name="listDomains">
            <file>listDomains.xml</file>
            <description>List all domains within the account</description>
        </component>
        <component name="domainMetadata">
            <file>domainMetadata.xml</file>
            <description>Returns information about the domain, including when the domain was
                created, the number of items and attributes, and the size of attribute names and
                values.
            </description>
        </component>
    </subComponents>
</component>